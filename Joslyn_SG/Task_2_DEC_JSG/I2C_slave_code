// C++ code
//
/*
  AnalogReadSerial
  Reads an analog input (potentiometer) on pin 0,
  prints the result to the serial monitor.

  OPEN THE SERIAL MONITOR TO VIEW THE OUTPUT FROM
  THE POTENTIOMETER >>

  Attach the center pin of a potentiometer to pin
  A0, and the outside pins to +5V and ground.

  This example code is in the public domain.
*/

#include <Wire.h>

#define SLAVE_ADDRESS 0x08

int sensorValue = 0;

void setup()
{
  pinMode(A0, INPUT);
  Wire.begin(SLAVE_ADDRESS);      // Join I2C as slave
  Wire.onRequest(sendData);       // When master asks
}

void loop()
{
  sensorValue = analogRead(A0);   // Read potentiometer
  delay(10);
}

void sendData()
{
  Wire.write(lowByte(sensorValue));
  Wire.write(highByte(sensorValue));
}
