#include <Wire.h>

void setup() {
  Wire.begin();               // Master mode
  Serial.begin(9600);
}

void loop() {
  Wire.requestFrom(8, 1);     // Request data from slave

  if (Wire.available()) {
    int data = Wire.read();
    Serial.print("Received Data: ");
    Serial.println(data);
  }

  delay(500);
}
