#include <Wire.h>

int sensorValue = 0;

void setup() {
  Wire.begin(8);               // Slave address
  Wire.onRequest(sendData);    // When master requests data
}

void loop() {
  sensorValue = analogRead(A0);   // Read potentiometer
  delay(100);
}

void sendData() {
  Wire.write(sensorValue / 4);    // Send data to master
}

